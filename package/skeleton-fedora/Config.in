config BR2_PACKAGE_SKELETON_FEDORA_ARCH_SUPPORTS
	bool
	default y if BR2_x86_64 || BR2_aarch64

config BR2_PACKAGE_SKELETON_FEDORA
	bool
	depends on BR2_PACKAGE_SKELETON_FEDORA_ARCH_SUPPORTS
	select BR2_PACKAGE_HAS_SKELETON
	select BR2_PACKAGE_HOST_FAKECHROOT
	select BR2_PACKAGE_HOST_FAKECHROOT
	select BR2_PACKAGE_HOST_FAKEROOT
	select BR2_PACKAGE_HOST_FAKEROOT
	select BR2_PACKAGE_SKELETON_INIT_COMMON

config BR2_PACKAGE_PROVIDES_SKELETON
	default "skeleton-fedora" if BR2_PACKAGE_SKELETON_FEDORA

