config BR2_PACKAGE_SKELETON_DEBIAN_ARCH_SUPPORTS
	bool
	default y if BR2_aarch64 || BR2_arm || \
		BR2_i386 || BR2_x86_64 || \
		BR2_mips || BR2_mipsel || BR2_mips64el || \
		BR2_powerpc || BR2_powerpc64le

config BR2_PACKAGE_SKELETON_DEBIAN
	bool
	depends on BR2_PACKAGE_SKELETON_DEBIAN_ARCH_SUPPORTS
	select BR2_PACKAGE_HAS_SKELETON
	select BR2_PACKAGE_SKELETON_INIT_COMMON

config BR2_PACKAGE_PROVIDES_SKELETON
	default "skeleton-debian" if BR2_PACKAGE_SKELETON_DEBIAN

