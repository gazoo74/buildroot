config BR2_PACKAGE_SKELETON_ARCHLINUX_ARCH_SUPPORTS
	bool
	default y if BR2_x86_64 || BR2_aarch64

config BR2_PACKAGE_SKELETON_ARCHLINUX
	bool
	depends on BR2_PACKAGE_SKELETON_ARCHLINUX_ARCH_SUPPORTS
	select BR2_PACKAGE_HAS_SKELETON
	select BR2_PACKAGE_HOST_ARCHLINUXARM_KEYRING if BR2_aarch64
	select BR2_PACKAGE_HOST_ARCHLINUX_KEYRING
	select BR2_PACKAGE_HOST_ARCHLINUX_PACMAN
	select BR2_PACKAGE_HOST_ARCHLINUX_PACMAN_MIRRORLIST
	select BR2_PACKAGE_HOST_FAKECHROOT
	select BR2_PACKAGE_HOST_FAKECHROOT
	select BR2_PACKAGE_HOST_FAKEROOT
	select BR2_PACKAGE_HOST_FAKEROOT
	select BR2_PACKAGE_SKELETON_INIT_COMMON

config BR2_PACKAGE_PROVIDES_SKELETON
	default "skeleton-archlinux" if BR2_PACKAGE_SKELETON_ARCHLINUX

